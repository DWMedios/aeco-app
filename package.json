{
  "name": "aeco-app",
  "version": "1.0.0",
  "author": {
    "name": "Franko Campos",
    "email": "camposfranciscoing@gmail.com"
  },
  "description": "AECO APP",
  "homepage": "https://github.com/franciscocamposchimal",
  "main": "main.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "concurrently \"npm run dev\" \"npm run electron\"",
    "dev": "webpack serve",
    "electron": "wait-on http://localhost:3000 && electron .",
    "build:react": "react-scripts build",
    "build:raspi": "electron-builder --armv7l",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "productName": "aeco-app",
    "appId": "com.example.aeco-app",
    "buildVersion": "1.0.0",
    "artifactName": "${productName}-${version}.${ext}",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "public/**/*",
      "src/**/*"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["armv7l"]
        },
        {
          "target": "deb",
          "arch": ["armv7l"]
        }
      ],
      "category": "Utility"
    },
    "extraMetadata": {
      "main": "main.js"
    }
  },
  "keywords": [],
  "license": "ISC",
  "dependencies": {
    "concurrently": "8.2.2",
    "electron-is-dev": "^3.0.1",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.24.7",
    "@babel/preset-env": "7.24.7",
    "@babel/preset-react": "7.24.7",
    "babel-loader": "9.1.3",
    "css-loader": "7.1.2",
    "electron": "31.0.2",
    "electron-builder": "^24.13.3",
    "react-scripts": "^5.0.1",
    "style-loader": "4.0.0",
    "webpack": "5.92.1",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
